<div class="container p-3 my-3 border">
  <%= form_with(url: "/exchangers", method: :get, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :exchange_code_from %>
      <%= f.text_field :exchange_code_from, { class: "form-control", placeholder: "Exchange code(e.g. UAH)" } %>
    </div>

    <div class="form-group">
      <%= f.label :exchange_code_to %>
      <%= f.text_field :exchange_code_to, { class: "form-control", placeholder: "Exchange code(e.g. USD)" } %>
    </div>

    <div class="form-group">
      <%= f.label :amount %>
      <%= f.text_field :amount, { class: "form-control", placeholder: "Amount" } %>
    </div>

    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, { class: "form-control", placeholder: "Please enter the date(format YY-MM-DD)" } %>
    </div>
      <%= f.submit "Currency", class: "btn btn-outline-success" %>
    </div>
  <% end %>

  <% if @response && @response.response %>
    <div class="container jumbotron jumbotron-fluid">
      <div class="container d-flex justify-content-center">
        <h3 class="display-5">Exchange Result: <%= @response.response %> </h3>
      </div>
    </div>
  <% end %>
</div>
